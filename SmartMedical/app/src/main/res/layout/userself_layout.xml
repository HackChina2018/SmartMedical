<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bj2">

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人中心"
            android:textSize="30dp"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/jinji_xingming"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relativelayout1"
        android:alpha="0.5"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="   姓名"
        android:textSize="25dp" />

    <Button
        android:id="@+id/zhuzhi"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/jinji_xingming"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:gravity="center"
        android:text="   住址"
        android:textSize="25dp" />


    <Button
        android:id="@+id/jinjilianxiren_xingming"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/zhuzhi"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:gravity="center"
        android:text="   紧急联系人"
        android:textSize="25dp" />


    <Button
        android:id="@+id/jinjilianxiren_lianxifangshi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/jinjilianxiren_xingming"
        />

    <Button
        android:id="@+id/bingli"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:layout_below="@id/jinjilianxiren_lianxifangshi"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="   我的病历"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/yongyaotixing"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bingli"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:gravity="center"
        android:text="   用药提醒"
        android:textSize="25dp" />


    <Button
        android:id="@+id/tuichudenglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:alpha="0.5"
        android:text="   退出登录"
        android:textSize="20dp" />
</RelativeLayout>